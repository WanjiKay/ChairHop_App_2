{
  "background_color": "white",
  "description": "ChairHop is an AI-powered stylist assistant that helps users find the right hairstylist, explore appointment options, and get personalized hair advice. Users can upload photos, ask questions, and chat with Hopper for tailored recommendations and booking support.",
  "display": "fullscreen",
  "name": "ChairHop",
  "icons": [
    <% files = Dir.children(Rails.root.join("app/assets/images/icons/")).select { |f| f.end_with?(".png") } %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless index == files.size - 1 %>
    <% end %>
  ]
}
