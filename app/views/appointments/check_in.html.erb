<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="check-in-page">
        <!-- Header -->
        <div class="text-center mb-4">
          <h1 class="text-primary fw-bold">Check-In</h1>
          <p class="text-muted">Please review your booking details</p>
        </div>

        <!-- Profile Pictures Section -->
        <div class="profiles-section mb-4">
          <div class="row text-center">
            <!-- Customer Profile -->
            <div class="col-6">
              <div class="profile-card">
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, class: "profile-picture rounded-circle mb-3" %>
                <% else %>
                  <%= image_tag "https://via.placeholder.com/120", class: "profile-picture rounded-circle mb-3" %>
                <% end %>
                <h5 class="text-primary fw-bold">You</h5>
                <p class="text-muted mb-0"><%= current_user.name %></p>
              </div>
            </div>

            <!-- Stylist Profile -->
            <div class="col-6">
              <div class="profile-card">
                <% if @appointment.stylist.avatar.attached? %>
                  <%= image_tag @appointment.stylist.avatar, class: "profile-picture rounded-circle mb-3" %>
                <% else %>
                  <%= image_tag "https://via.placeholder.com/120", class: "profile-picture rounded-circle mb-3" %>
                <% end %>
                <h5 class="text-primary fw-bold">Your Stylist</h5>
                <p class="text-muted mb-0"><%= @appointment.stylist.name %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Details Section -->
        <div class="booking-details-card mb-4">
          <h4 class="text-primary fw-bold mb-3">Booking Details</h4>

          <div class="detail-row">
            <span class="detail-label">Salon:</span>
            <span class="detail-value"><%= @appointment.salon %></span>
          </div>

          <div class="detail-row">
            <span class="detail-label">Location:</span>
            <span class="detail-value"><%= @appointment.location %></span>
          </div>

          <div class="detail-row">
            <span class="detail-label">Time:</span>
            <span class="detail-value"><%= @appointment.time.strftime("%b %d, %Y at %I:%M %p") if @appointment.time.present? %></span>
          </div>

          <hr class="my-3">

          <!-- Service and Price -->
          <div class="service-price-section">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1 text-primary fw-bold">Selected Service</h5>
                <p class="mb-0 service-name"><%= @selected_service %></p>
              </div>
              <div class="price-badge">
                <span class="display-6 fw-bold text-primary">$<%= @service_price %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Confirm Button -->
        <div class="text-center">
          <%= link_to "Confirm", confirmation_appointment_path(@appointment, selected_service: @selected_service), class: "btn btn-primary btn-lg px-5 py-3 fw-bold" %>

          <div class="mt-3">
            <%= link_to "â† Back to Appointment", appointment_path(@appointment), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
