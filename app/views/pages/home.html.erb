
<div class="home-page">
  <div class="container mt-4" >
    <h1>Chair Hop</h1>
    <p>Our chair is always open</p>

  <% signed_in = (defined?(user_signed_in?) && user_signed_in?) %>

  <% if signed_in %>
    <p class="text-muted">
      Welcome back,
      <%= (defined?(current_user) && current_user && current_user.respond_to?(:first_name)) ? current_user.first_name : "friend" %>!
    </p>
  <% else %>
    <p class="text-muted">
      Welcome!
      <% if defined?(new_user_session_path) %>
        <%= link_to "Log in", new_user_session_path %>
      <% end %>
      <% if defined?(new_user_registration_path) %>
        <% if defined?(new_user_session_path) %> or <% end %>
        <%= link_to "Sign up", new_user_registration_path %>
      <% end %>
      <% unless defined?(new_user_session_path) || defined?(new_user_registration_path) %>
        <!-- Devise not present: hide auth links -->
      <% end %>
      to book a chair.
    </p>
    <% end %>

    <div class="search-section p-4 rounded position-relative">
      <div class="row align-itmes-center">
        <div class="col">
          <%= form_with url: appointments_path, method: :get, local: true, class: "input-grouop" do |f| %>
            <%= f.text_field :query, class: "form-control", placeholder: "Search for servce or stylist" %>
            <%= f.submit "search", class: "btn btn-primary px-4" %>
            <% end %>
          </div>
        </div>
        <% if defined?(chats_path) %>
          <%= link_to chats_path, class: "btn btn-info rounded-cirlce chat-bot-btn" do %>
            Chat<br>Bot
          <% end %>
        <% else %>
          <%= link_to "#", class: "btn btn-info rounded-circle chat-bot-btn" do %>
            Chat<br>Bot
          <% end %>
        <% end %>
      </div>

     <h3 class="mt-4 mb-3">Near By Appointments:</h3>
    <div class="row g-3">
      <% if @upcoming_appointments.present? %>
        <% @upcoming_appointments.each do |appointment| %>
          <div class="col-md-6">
            <%= link_to appointment_path(appointment), class: "text-decoration-none" do %>
              <div class="card appointment-card">
                <% if appointment.stylist.avatar.attached? %>
                  <%= image_tag appointment.stylist.avatar, class: "card-img-top", alt: appointment.stylist.name %>
                <% else %>
                  <%= image_tag "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=400", class: "card-img-top", alt: "Salon" %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= appointment.stylist.name %></h5>
                  <p class="card-text">
                    <%= appointment.location %>
                    <% if appointment.time.present? %>
                      <br><small><%= appointment.time.strftime("%b %d, %Y at %I:%M %p") %></small>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>

      <div class="col-md-6">
          <div class="card appointment-card">
            <%= image_tag "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=400", class: "card-img-top", alt: "Salon" %>
            <div class="card-body">
              <h5 class="card-title">Chez Chic</h5>
              <p class="card-text">Wash & Set with Tiley</p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card appointment-card">
            <%= image_tag "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=400", class: "card-img-top", alt: "Salon" %>
            <div class="card-body">
              <h5 class="card-title">Barber Shop</h5>
              <p class="card-text">Beard trim & line up with Omar</p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card appointment-card">
            <%= image_tag "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=400", class: "card-img-top", alt: "Salon" %>
            <div class="card-body">
              <h5 class="card-title">Barber Shop</h5>
              <p class="card-text">Beard trim & line up with Omar</p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card appointment-card">
            <%= image_tag "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=400", class: "card-img-top", alt: "Salon" %>
            <div class="card-body">
              <h5 class="card-title">Chez Chic</h5>
              <p class="card-text">Wash & Set with Tiley</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
