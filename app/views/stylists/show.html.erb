<h1><%= @stylist.name %></h1>
<p><%= @stylist.location %></p>
<p><%= @stylist.about %></p>

<% if @stylist.avatar.attached? %>
  <%= image_tag @stylist.avatar, alt: @stylist.name, class: "img-fluid rounded mb-3", style: "max-width: 300px;" %>
<% end %>

<h2>Reviews</h2>
<% if @reviews.any? %>
  <% @reviews.each do |review| %>
    <p><strong>Rating:</strong> <%= review.rating %>/5</p>
    <p><%= review.content %></p>
    <hr>
  <% end %>
<% else %>
  <p>No reviews yet.</p>
<% end %>

<h2>Available Appointments</h2>
<% if @appointments.any? %>
  <% @appointments.each do |appt| %>
    <p><%= appt.time.strftime("%b %d, %Y at %I:%M %p") if appt.time.present? %> • <%= appt.location %></p>
    <%= link_to "View Appointment", appointment_path(appt), class: "btn btn-primary btn-sm mb-2" %>
  <% end %>
<% else %>
  <p>No available appointments.</p>
<% end %>

<div class="mt-4">
  <%= link_to "← Back", :back, class: "btn btn-outline-primary" %>
</div>
