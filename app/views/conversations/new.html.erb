<div class="container py-5">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="text-primary fw-bold mb-4">Start a Conversation</h2>

          <% if @appointment %>
            <div class="mb-4">
              <p><strong>Appointment:</strong> <%= @appointment.salon %></p>
              <p><strong>Stylist:</strong> <%= @appointment.stylist.name %></p>
              <p><strong>Time:</strong> <%= @appointment.time.strftime("%b %d, %Y at %I:%M %p") if @appointment.time.present? %></p>
            </div>

            <%= simple_form_for @conversation, url: appointment_conversations_path(@appointment) do |f| %>
              <%= f.hidden_field :appointment_id, value: @appointment.id %>

              <div class="d-grid gap-2">
                <%= f.button :submit, "Start Conversation with Stylist", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="mt-3">
              <%= link_to "← Back to Appointment", appointment_path(@appointment), class: "btn btn-outline-secondary" %>
            </div>
          <% else %>
            <p class="text-danger">No appointment specified.</p>
            <%= link_to "← Back to Appointments", appointments_path, class: "btn btn-outline-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
